<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_birthday_people"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/iv_birthday_people"
        android:background="@mipmap/bgedge"/>
    <TextView
        android:id="@+id/tv_birthday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_birthday_people"
        android:text="Name"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/tv_birthday_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_birthday_name"
        android:layout_toRightOf="@id/iv_birthday_people"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="****年**月**日"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/asas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:text="距离下次生日"/>
    <TextView
        android:id="@+id/tv_birthday_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/asxx"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:textSize="30dp"
        android:text="***"/>
    <TextView
        android:id="@+id/asxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/asas"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="天"/>
</RelativeLayout>
