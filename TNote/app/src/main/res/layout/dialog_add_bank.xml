<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_addBank_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:maxLength="19"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_addBank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="请输入开卡银行"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_addBank_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="请输入持卡人"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_addBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_adddata_ok"
                android:textColor="#ffffff"
                android:text="确认" />

            <Button
                android:id="@+id/btn_CannerBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_adddata_canner"
                android:layout_marginLeft="10dp"
                android:textColor="#696968"
                android:text="取消" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
