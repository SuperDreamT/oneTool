<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.superto.tnote.activity.BirthdayHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#9F3D23">

            <ImageView
                android:id="@+id/iv_upbirthday_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/ic_back2" />

            <TextView
                android:id="@+id/tv_birthdayHome_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_upbirthday_back"
                android:gravity="center_vertical"
                android:text="个人主页"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_birthdayHome_redact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="编辑"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/sms_item">

            <ImageView
                android:id="@+id/iv_birthdayHome_people"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:src="@mipmap/ic_man" />

            <TextView
                android:id="@+id/tv_birthdayHome_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/app_name"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/iv_birthdayHome_sex"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:src="@mipmap/ic_user_female" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_birthdayHome_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="****年**月**日"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_birthdayHome_time"
                android:text="公历"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_birthdayHome_xingzuo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_birthdayHome_time"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="星座"
                android:textColor="#9F3D23"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bgedge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btn_birthdayHome_phone"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_phone1" />

            <Button
                android:id="@+id/btn_birthdayHome_sms"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:background="@mipmap/ic_sms" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
